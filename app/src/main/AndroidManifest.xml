        </activity>
        <activity android:name=".MyDBAdapter" />
        <activity
            android:name=".Anyadiralumno"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Eliminaralumno"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Anyadirprofesor"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Eliminarprofesor"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".ListarEstudiantes" />
